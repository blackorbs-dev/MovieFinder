<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleText"
        android:padding="20dp"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/find_movies"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SearchViewStyle"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_here"
        app:queryBackground="@null"
        app:searchIcon="@drawable/baseline_search_24"
        android:background="@drawable/all_round_corner"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movies_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="GridLayoutManager"
        android:layout_marginTop="@dimen/text_margin"
        android:paddingStart="@dimen/standard_10"
        android:paddingEnd="@dimen/standard_10"
        app:spanCount="2"
        android:paddingBottom="@dimen/text_margin"
        android:clipToPadding="false"
        tools:context=".ui.searchscreen.SearchPage"
        tools:listitem="@layout/movie_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/all_round_corner"
        app:indicatorColor="@color/pink"
        app:layout_constraintStart_toStartOf="@+id/movies_list"
        app:layout_constraintEnd_toEndOf="@+id/movies_list"
        app:layout_constraintTop_toTopOf="@+id/movies_list"
        app:layout_constraintBottom_toBottomOf="@+id/movies_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>