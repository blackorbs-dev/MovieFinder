<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieFinder" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_100</item>
        <item name="colorOnPrimary">@color/black_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MovieFinder" parent="Base.Theme.MovieFinder" />


    <style name="Theme.MovieFinder.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieFinder</item>
    </style>

    <style name="SearchViewStyle" parent="TextAppearance.Material3.SearchView">
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textColorHint">@color/black_400</item>
        <item name="editTextColor">@color/black_400</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TitleText.Smaller">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

</resources>