<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieFinder" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MovieFinder" parent="Base.Theme.MovieFinder" />

    <style name="Theme.MovieFinder.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieFinder</item>
    </style>

    <style name="SearchViewStyle" parent="TextAppearance.Material3.SearchView">
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textColorHint">@color/black_400</item>
        <item name="editTextColor">@color/black_400</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TitleText.Smaller">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="NormalTextLight">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnackbarStyle" parent="ThemeOverlay.Material3.Snackbar">
        <item name="backgroundTint">@color/white_100</item>
        <item name="android:layout_margin">@dimen/standard_5</item>
        <item name="android:paddingStart">@dimen/standard_5</item>
        <item name="android:paddingEnd">@dimen/standard_5</item>
    </style>

    <style name="SnackbarButton" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>