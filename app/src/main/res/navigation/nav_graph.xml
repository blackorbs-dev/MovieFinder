<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchPage">

    <fragment
        android:id="@+id/searchPage"
        android:name="blackorbs.dev.moviefinder.ui.searchscreen.SearchPage"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchPage_to_moviePage"
            app:destination="@id/moviePage"
            app:enterAnim="@anim/nav_slide_in_right"
            app:exitAnim="@anim/nav_slide_out_left"
            app:popExitAnim="@anim/nav_slide_out_right"
            app:popEnterAnim="@anim/nav_slide_in_left"/>
    </fragment>
    <fragment
        android:id="@+id/moviePage"
        android:name="blackorbs.dev.moviefinder.ui.moviescreen.MoviePage"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie">
        <argument
            android:name="movieName"
            app:argType="string"/>
    </fragment>
</navigation>